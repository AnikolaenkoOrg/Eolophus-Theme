{{!< default}}

<div class="container mx-auto">
{{#post}}
    <div class="nw-space-t">
        <div class="flex justify-center items-center space-x-2 mb-4">
            <span><time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time></span>
            <span>/</span>
            <span>{{reading_time}}</span>
        </div>
        {{#if tags}}
            <div class="flex justify-center items-center space-x-2 mb-4">
                {{#foreach tags}}
                    <a href="{{url}}" title="{{name}}" class="nw-tag dark:nw-tag-dark text-xs">
                        <span>{{name}}</span>
                    </a>
                {{/foreach}}
            </div>
        {{/if}}
        {{#if title}}
            <h1 class="text-center text-6xl font-bold md:px-32">{{title}}</h1>
            {{> "divider"}}
        {{/if}}
    </div>
    {{#if feature_image}}
        <figure>
            <img class="nw-space-t lazyload max-w-full w-full" src="{{img_url feature_image size="xxs"}}" data-src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
            {{#if feature_image_caption}}
                <figcaption class="text-base mt-2">{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
    {{/if}}

    <div class="grid grid-cols-12 nw-space-t">
        <div class="col-span-12 lg:col-span-4 xl:col-span-3">
            <div class="sticky top-4 flex flex-col space-y-8">
                {{#if access}}
                <div id="nw-toc-wrapper">
                    <div class="text-xl font-bold mb-4">{{t "On this page"}}</div>
                    <div id="nw-toc" class="text-lg pr-12 text-[#505050] dark:text-white"></div>
                </div>
                {{/if}}
                {{#if authors}}
                    <div>
                        <div class="text-xl font-bold mb-4">{{t "Contributors"}}</div>
                        <div class="flex flex-col space-y-4">
                            {{#foreach authors}}
                                <div class="flex items-center space-x-2">
                                    {{#if profile_image}}
                                        <a href="{{url}}" class="block w-14 h-14 rounded-full relative">
                                            <img src="{{profile_image}}" alt="{{name}}" class="nw-img rounded-full">
                                        </a>
                                    {{/if}}
                                    <div class="flex flex-col">
                                        <a href="{{url}}" class="font-semibold">{{name}}</a>
                                        <span class="text-[#8c8a8a]">{{location}}</span>
                                    </div>
                                </div>
                            {{/foreach}}
                        </div>
                    </div>
                {{/if}}
                <div>
                    <div class="text-xl font-bold mb-4">{{t "Share this post"}}</div>
                    <div class="flex flex-wrap">
                        <a href="https://www.facebook.com/share.php?u={{url absolute="true"}}" title="{{t "Share on Facebook"}}" class=" nw-tag dark:nw-tag-dark text-xs mr-1 hover:bg-inherit dark:hover:bg-inherit">
                            {{> "icons/facebook"}}
                        </a>
                        <a href="https://twitter.com/intent/tweet?text={{url absolute="true"}}" title="{{t "Share on Twitter"}}" class="nw-tag dark:nw-tag-dark text-xs mr-1 hover:bg-inherit dark:hover:bg-inherit">
                            {{> "icons/twitter"}}
                        </a>
                        <button class="nw-tag dark:nw-tag-dark text-xs hover:bg-inherit dark:hover:bg-inherit hover:text-inherit dark:hover:text-inherit" id="trex_copy">
                            <span id="nw-copy">{{> "icons/copy"}}</span>
                            <span class="hidden" id="nw-copied">{{t "Copied!"}}</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-span-12 lg:col-span-8 xl:col-span-9">
            {{#if excerpt}}
                <div class="text-lg text-gray-900 dark:text-gray-300 font-medium pb-8 mb-8 mt-8 lg:mt-0 nw-border-b !border-b-[.7px] dark:!border-b-[1px]">
                    <p>{{excerpt}}</p>
                </div>
            {{/if}}
            <div class="nw-content">
                {{content}}
{{> integrations/contextly-module}}
            </div>
            {{> "post-navigation"}}

            {{#if comments}}
               <div class="mt-[12vh] dark:text-white">
                    {{comments title="Member discussion" count=true mode="auto"}}
               </div>
            {{/if}}

            {{> "related-posts"}}
        </div>
    </div>
{{/post}}
</div>