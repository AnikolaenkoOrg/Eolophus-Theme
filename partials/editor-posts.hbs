{{#get "posts" filter="tag:hash-editorschoice" include="tags,authors" limit="5"}}
{{#match posts.length ">" 0}}
    <section class="container mx-auto nw-space-t">
        <div class="flex justify-between items-center mb-10">
            <h2 class="flex items-center space-x-2">
                <span>
                    {{> "icons/union"}}
                </span>
                <span class="uppercase text-lg font-semibold">
                    {{t "Editor's Choice"}}
                </span>
            </h2>
        </div>
        <div class="grid grid-cols-1 xl:grid-cols-3 gap-x-6">
            <div class="xl:col-span-2">
                {{#foreach posts from="1" to="3"}}
                    <article class="pb-3 mb-3 nw-border-b !border-b-[.7px] dark:!border-b-[1px] last:!border-0 dark:last:!border-0 last:mb-0 last:pb-0">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6">
                            <div class="sm:pt-10 order-last sm:order-none">
                                <div class="flex md:items-center mb-3 md:space-x-2 self-start flex-col space-y-4 md:flex-row md:space-y-0">
                                    <div class="flex space-x-2">
                                        {{#if tags}}
                                            <div class="flex space-x-2">
                                                {{#foreach tags}}
                                                    <a href="{{url}}" title="{{name}}" class="nw-tag dark:nw-tag-dark text-xs">
                                                        <span>{{name}}</span>
                                                    </a>
                                                {{/foreach}}
                                            </div>
                                        {{/if}}
                                        {{#unless access}}
                                            <span class="nw-tag dark:nw-tag-dark text-xs hover:bg-inherit dark:hover:bg-inherit">
                                                {{> "icons/locked"}}
                                            </span>
                                        {{/unless}}
                                        {{#if featured}}
                                            <span class="nw-tag dark:nw-tag-dark text-xs hover:bg-inherit dark:hover:bg-inherit">
                                                {{> "icons/featured"}}
                                            </span>
                                        {{/if}}
                                    </div>
                                </div>
                                {{#if title}}
                                    <h2 class="text-xl font-bold uppercase line-clamp-2 hover:underline">
                                        <a href="{{url}}">
                                            {{title}}
                                        </a>
                                    </h2>
                                {{/if}}
                                <div class="mt-3">
                                    {{excerpt}}
                                </div>
                                <div class="uppercase text-sm mt-3">
                                    {{#primary_author}}
                                        <span>{{t "by"}} <a href="{{url}}" title="{{name}}">{{name}}</a></span>
                                    {{/primary_author}}
                                    <span>/</span>
                                    <span><time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time></span>
                                </div>
                            </div>
                            <div>
                                {{#if feature_image}}
                                    <div class="h-[280px] w-full relative mb-4 md:mb-0">
                                        <a href="{{url}}" class="block absolute w-full h-full">
                                            <img class="nw-img lazyload" src="{{img_url feature_image size="xxs"}}" data-src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                                        </a>
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                    </article>
                {{/foreach}}
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 sm:gap-x-4 xl:block mt-4 sm:mt-0">
                {{#foreach posts from="4" to="5"}}
                    <article class="mb-4">
                        {{#if feature_image}}
                            <div class="h-[320px] w-full relative mb-4">
                                <a href="{{url}}" class="block absolute w-full h-full">
                                    <img class="nw-img lazyload" src="{{img_url feature_image size="xxs"}}" data-src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                                </a>
                            </div>
                        {{/if}}
                        <div class="flex md:items-center mb-3 space-x-2 self-start flex-col space-y-4 md:flex-row md:space-y-0">
                            <div class="flex space-x-2">
                                {{#if tags}}
                                    <div class="flex space-x-2">
                                        {{#foreach tags}}
                                            <a href="{{url}}" title="{{name}}" class="nw-tag dark:nw-tag-dark text-xs">
                                                <span>{{name}}</span>
                                            </a>
                                        {{/foreach}}
                                    </div>
                                {{/if}}
                                {{#unless access}}
                                    <span class="nw-tag dark:nw-tag-dark text-xs hover:bg-inherit dark:hover:bg-inherit">
                                        {{> "icons/locked"}}
                                    </span>
                                {{/unless}}
                                {{#if featured}}
                                    <span class="nw-tag dark:nw-tag-dark text-xs hover:bg-inherit dark:hover:bg-inherit">
                                        {{> "icons/featured"}}
                                    </span>
                                {{/if}}
                            </div>
                        </div>
                        {{#if title}}
                            <h2 class="text-xl font-bold uppercase line-clamp-2 hover:underline">
                                <a href="{{url}}">
                                    {{title}}
                                </a>
                            </h2>
                        {{/if}}
                        <div class="uppercase text-sm mt-3">
                            {{#primary_author}}
                                <span>{{t "by"}} <a href="{{url}}" title="{{name}}">{{name}}</a></span>
                            {{/primary_author}}
                            <span>/</span>
                            <span><time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time></span>
                        </div>
                    </article>
                {{/foreach}}
            </div>
        </div>
    </section>
{{/match}}
{{/get}}