{{#get "posts" filter="tag:hash-headlines" include="tags,authors" limit="10"}}
{{#match posts.length ">" 0}}
    <section class="splide ml-[25px] mr-[29px] nw-space-t" id="nw-headlines">
        <div class="splide__track">
            <div class="splide__list">
                {{#foreach posts}}
                    <article class="h-auto splide__slide">
                        {{#if feature_image}}
                            <div class="relative mb-3">
                                <a href="{{url}}" class="block relative w-full h-[300px]">
                                    <img class="nw-img lazyload" src="{{img_url feature_image size="xxs"}}" data-src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                                </a>
                            </div>
                        {{/if}}
                        <div class="flex space-x-2 mb-2">
                            {{#if tags}}
                                <div class="flex space-x-2">
                                    {{#foreach tags}}
                                        <a href="{{url}}" title="{{name}}" class="nw-tag dark:nw-tag-dark text-xs">
                                            <span>{{name}}</span>
                                        </a>
                                    {{/foreach}}
                                </div>
                            {{/if}}
                            {{#unless access}}
                                <span class="nw-tag dark:nw-tag-dark text-xs hover:bg-inherit dark:hover:bg-inherit">
                                    {{> "icons/locked"}}
                                </span>
                            {{/unless}}
                            {{#if featured}}
                                <span class="nw-tag dark:nw-tag-dark text-xs hover:bg-inherit dark:hover:bg-inherit">
                                    {{> "icons/featured"}}
                                </span>
                            {{/if}}
                        </div>
                        
                        {{#if title}}
                            <h2 class="text-xl font-bold uppercase line-clamp-2 mb-2">
                                <a href="{{url}}" class="hover:underline">
                                    {{title}}
                                </a>
                            </h2>
                        {{/if}}
                        <div class="uppercase text-sm">
                            {{#primary_author}}
                                <span>{{t "by"}} <a href="{{url}}" title="{{name}}">{{name}}</a></span>
                            {{/primary_author}}
                            <span>/</span>
                            <span><time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time></span>
                        </div>
                    </article>
                {{/foreach}}
            </div>
        </div>
    </section>
    {{> "divider"}}
{{/match}}
{{/get}}