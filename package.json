{
    "name": "newswire",
    "description": "Simple & clean blog ghost theme",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Trexthemes",
        "email": "trexthemes@gmail.com",
        "url": "https://trexthemes.com"
    },
    "config": {
        "card_assets": true,
        "posts_per_page": 10,
        "image_sizes": {
            "xxs": {
                "width": 100
            },
            "xs": {
                "width": 600
            },
            "m": {
                "width": 1000
            },
            "l": {
                "width": 1500
            },
            "xl": {
                "width": 2500
            }
        },
        "custom": {
            "logo_dark": {
                "type": "image"
            },
            "endpoint_form": {
                "type": "text"
            },
            "color_scheme": {
                "type": "select",
                "options": ["Sepia", "Light", "Dark", "Auto Sepia Dark", "Auto Light Dark"],
                "default": "Sepia"
            }
        }
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "blog",
        "minimal",
        "clean",
        "simple",
        "multipropose",
        "magazine",
        "reading"
    ],
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.9",
        "autoprefixer": "10.4.7",
        "beeper": "2.1.0",
        "cssnano": "5.1.11",
        "gscan": "4.31.2",
        "gulp": "^4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-file-include": "^2.3.0",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "postcss": "8.4.14",
        "postcss-cli": "^8.3.1",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0",
        "tailwindcss": "^3.3.1"
    },
    "dependencies": {
        "@tailwindcss/container-queries": "^0.1.1",
        "gulp-cli": "^2.3.0"
    }
}
